{
  "openapi": "3.1.0",
  "info": {
    "title": "NoteLinkGPT API",
    "description": "API for interacting with Evernote",
    "version": "v1.0.0"
  },
  "servers": [
    {
      "url": "https://www.notelinkgpt.com/"
    }
  ],
  "paths": {
    "/api/notes": {
      "get": {
        "description": "Retrieve a list of notes",
        "operationId": "GetNotes",
        "parameters": [
        {
            "name": "user_id",
            "in": "query",
            "description": "User ID for the request",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "page_size",
            "in": "query",
            "description": "Number of notes to retrieve per page",
            "required": false,
            "schema": {
              "type": "integer",
              "default": 10
            }
          },
          {
            "name": "page_number",
            "in": "query",
            "description": "Page number to retrieve",
            "required": false,
            "schema": {
              "type": "integer",
              "default": 1
            }
          }
        ],
        "deprecated": false
      }
    },
    "/api/notes/search": {
      "get": {
        "description": "Search for notes",
        "operationId": "SearchNotes",
        "parameters": [
        {
            "name": "user_id",
            "in": "query",
            "description": "User ID for the request",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "q",
            "in": "query",
            "description": "Search query",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "deprecated": false
      }
    },
    "/api/notes/{guid}": {
      "get": {
        "description": "Retrieve a specific note",
        "operationId": "GetNote",
        "parameters": [
        {
            "name": "user_id",
            "in": "query",
            "description": "User ID for the request",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "guid",
            "in": "path",
            "description": "GUID of the note to retrieve",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "deprecated": false
      }
    }
  },
  "components": {
    "schemas": {}
  }
}